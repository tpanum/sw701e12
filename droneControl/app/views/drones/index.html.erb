<% @page_title = "Drones List" %>

<div class="drones list">
	<h2>Drones</h2>
	<table class="listing" summary="drones list">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Name</th>
			<th>Location</th>
			<th>IP</th>
			<th>Actions</th>
		</tr>

		<% @drones.each do |drone| %>
			<tr>
				<td><%= drone.id %></td>
				<td><%= drone.name %></td>
				<td><%= drone.location %></td>
				<td><%= drone.ip %></td>
				<td class="actions">
					<%= link_to 'Show', drone %>
      				<%= link_to 'Edit', edit_drone_path(drone) %>
      				<%= link_to 'Destroy', drone, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
			</tr>
		<% end %>
	</table>
	<br />
	<%= link_to 'New Drone', new_drone_path %>
</div>
