<% @page_title = "Drones List" %>

<div class="drones list">
	<h2>Drones</h2>
	<table id ="dronelist" class="listing" summary="drones list">
		<tr class="header">
			<th>Name</th>
			<th>Location</th>
			<th>IP</th>
			<th>Actions</th>
		</tr>

		<% @drones.each do |drone| %>
			<tr>
				<td><%= unless drone.name.blank? then drone.name else render "globals/undefined" end %></td>
				<td><%= unless drone.location.blank? then drone.location else render "globals/undefined" end %></td>
				<td><%= unless drone.ip.blank? then drone.ip else render "globals/undefined" end %></td>
				<td class="actions">
					<%= link_to '', drone, :class => "show" %>
      				<%= link_to '', edit_drone_path(drone), :class => "edit" %>
      				<%= link_to '', drone, method: :delete, :class => "delete", data: { confirm: 'Are you sure?' } %>
				</td>
			</tr>
		<% end %>
	</table>
	<br />
	<%= link_to("Add drone", new_drone_path, :class => 'button') %><br />
</div>
