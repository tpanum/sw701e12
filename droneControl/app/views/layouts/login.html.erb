<html lang="en">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf8">
		<title><%= t(:projectname) %></title>
		<%= stylesheet_link_tag('application', :media => 'all') %>
		<%= javascript_include_tag "application" %>
