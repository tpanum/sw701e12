<% @page_title = "Users List" %>

<div class="users list">
	<h2>Users</h2>

	<table id="userlist" class="listing" summary="Users list">
		<tr class="header">
			<th>Name</th>
			<th>Email</th>
			<th>Actions</th>
		</tr>

		<% @users.each do |user| %>
			<tr>
				<td><%= unless user.full_name.blank? then user.full_name else render "globals/undefined" end %></td>
				<td><%= unless user.email.blank? then user.email else render "globals/undefined" end %></td>
				<td class="actions">
					<%= link_to '', user, :class => "show" %>
      		<%= link_to '', edit_user_path(user), :class => "edit" %>
      		<%= link_to '', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "delete" %>
				</td>
			</tr>
		<% end %>
	</table>

	<br />

	<%= link_to 'New User', new_user_path, :class => "button" %>
</div>
