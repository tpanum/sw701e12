<h1>Listing privileges</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Identifier</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>

<% @privileges.each do |privilege| %>
  <tr>
    <td><%= privilege.id %></td>
    <td><%= privilege.identifier %></td>
    <td><%= truncate(privilege.description, :length => 30) %></td>
    <td class="actions">
      <%= link_to 'Show', privilege %>
      <%= link_to 'Edit', edit_privilege_path(privilege) %>
      <%= link_to 'Destroy', privilege, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Privilege', new_privilege_path %>
